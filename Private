using System;
class PhanSo
{
    private int TuSo;
    private int MauSo;
    public int LayTuSo()
    {
        return this.TuSo;
    }
    public void GanTuSo(int t)
    {
        this.TuSo = t;
    }
    public int LayMauSo()
    {
        return this.MauSo;
    }
    public void GanMauSo(int m)
    {
        if (m != 0)
        {
            this.MauSo = m;
        }
    }
}
class Program
{
    static void Main()
    {
        PhanSo A = new PhanSo();
        A.GanTuSo(7);
        A.GanMauSo(0);
        Console.WriteLine($"{A.LayTuSo()}/{A.LayMauSo()}");
        Console.ReadLine();
    }
}


//Cách 2: Hàm thuộc tính

using System;
class PhanSo
{
    private int TuSo;
    private int MauSo;
    
    public int TUSO
    {
        get
        {
            return this.TuSo;
        }
        set
        {
            this.TuSo = value;
        }
    }
    public int MAUSO
    {
        get
        {
            return this.MauSo;
        }
        set
        {
            if (value != 0)
            {
                this.MauSo = value;
            }
        }
    }
}
class Program
{
    static void Main()
    {
        PhanSo A = new PhanSo();
        A.TUSO = 7;
        A.MAUSO = 8;
        Console.WriteLine($"{A.TUSO}/{A.MAUSO}");
        Console.ReadLine();
    }
}


//Cách 3: Viết ngắn gọn

using System;
class PhanSo
{
    public int TUSO { get; set; }
    private int MauSo;
    
    public int MAUSO
    {
        get
        {
            return this.MauSo;
        }
        set
        {
            if (value != 0)
            {
                this.MauSo = value;
            }
        }
    }
}
class Program
{
    static void Main()
    {
        PhanSo A = new PhanSo();
        A.TUSO = 7;
        A.MAUSO = 8;
        Console.WriteLine($"{A.TUSO}/{A.MAUSO}");
        Console.ReadLine();
    }
}
